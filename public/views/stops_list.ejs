<div>
		<div class="page-header">
	    	<h1>Stop List</h1>
	  	</div>
	  	<div>
			<table class="table table-striped">
			    <thead>
			      <tr>
			      	<th>站名</th>
			        <th>地區</th>
			        <th>分區</th>
			      </tr>
			    </thead>
			    <tbody>
			      <tr  ng-repeat="stop in stops | orderBy: 'code'">
			      	<td><a>{{stop.displayName}}</a></td>
			        <td>{{stop.region}}</td>
			        <td>{{stop.subRegion}}</td>
			        <td>
			        	<a role="button" class="btn btn-info">Edit</a>
			        	<a role="button" class="btn btn-danger">Delete</a></td>
			        </td>
			      </tr>
			    </tbody>
			</table>
		</div>

	</div>	