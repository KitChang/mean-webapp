<div>
		<div class="text-contrast page-header">
	    	<h1>Shop List</h1>
	    	<a ui-sref="shopscreate" role="button" class="glyphicon glyphicon-plus btn btn-primary pull-right"></a>
	  	</div>
	  	<div>
			<table class="table table-striped">
			    <thead>
			      <tr>
			      	<th>名稱</th>
			        <th>地區</th>
			        <th>分類</th>
			      </tr>
			    </thead>
			    <tbody>
			      <tr  ng-repeat="shop in shops">
			      	<td><a href="#">{{shop.business}}</a></td>
			        <td>{{shop.region}}</td>
			        <td>{{shop.type}}</td>
			        <td>
			        	<a ui-sref="shopsedit({shopId:'{{shop._id}}'})" role="button" class="btn btn-info">Edit</a>
			        	<a role="button" class="btn btn-danger" ng-click="remove(shop._id);">Delete</a></td>
			        </td>
			      </tr>
			    </tbody>
			</table>
		</div>

	</div>	