<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>MEAN Web App</title>
	<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="meanWebApp">
	
	<nav class="navbar navbar-default" ng-controller="NavCtrl">
		<div class="navbar-header">
		    <a href="/#/home" class="navbar-brand">MEAN Web App</a>
		</div>
	    <ul class="nav navbar-nav pull-right">
	    	<li class="dropdown" ng-show="isAdmin()">
			  <a class="dropdown-toggle" type="button" data-toggle="dropdown">Admin
			  <span class="caret"></span></a>
			  <ul class="dropdown-menu">
			    <li><a ui-sref="user">User</a></li>
			    <li><a href="#">CSS</a></li>
			    <li><a href="#">JavaScript</a></li>
			  </ul>
			</li>
	      	<li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
	      	<li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
	      	<li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
	      	<li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
	    </ul>
	</nav>
	<div class="row">
    	<div class="col-md-8 col-md-offset-2">
			<ui-view></ui-view>
    	</div>
  	</div>
  	<script type="text/ng-template" id="/home.html">
	  	<div class="page-header">
	    	<h1>Home</h1>
	  	</div>
	  	
	</script>
	<script type="text/ng-template" id="/register.html">
	  <div class="page-header">
	    <h1>Register</h1>
	  </div>

	  <div ng-show="error" class="alert alert-danger row">
	    <span>{{ error.message }}</span>
	  </div>

	  <form ng-submit="register()"
	    style="margin-top:30px;">
	    <h3>Register</h3>

	    <div class="form-group">
	      <input type="text"
	      class="form-control"
	      placeholder="Username"
	      ng-model="user.username"></input>
	    </div>
	    <div class="form-group">
	      <input type="password"
	      class="form-control"
	      placeholder="Password"
	      ng-model="user.password"></input>
	    </div>
	    <button type="submit" class="btn btn-primary">Register</button>
	  </form>
	</script>
	<script type="text/ng-template" id="/login.html">
	  <div class="page-header">
	    <h1>Login</h1>
	  </div>

	  <div ng-show="error" class="alert alert-danger row">
	    <span>{{ error.message }}</span>
	  </div>

	  <form ng-submit="logIn()"
	    style="margin-top:30px;">
	    <h3>Log In</h3>

	    <div class="form-group">
	      <input type="text"
	      class="form-control"
	      placeholder="Username"
	      ng-model="user.username"></input>
	    </div>
	    <div class="form-group">
	      <input type="password"
	      class="form-control"
	      placeholder="Password"
	      ng-model="user.password"></input>
	    </div>
	    <button type="submit" class="btn btn-primary">Log In</button>
	  </form>
	</script>
	<script type="text/ng-template" id="/user.html">
		<div class="page-header">
	    	<h1>User</h1>
	  	</div>
	  	<div>
			<table class="table table-striped">
			    <thead>
			      <tr>
			        <th>Username</th>
			        <th>Roles</th>
			      </tr>
			    </thead>
			    <tbody>
			      <tr  ng-repeat="user in users | orderBy: 'username'">
			        <td>{{user.username}}</td>
			        <td>{{user.roles}}</td>
			      </tr>
			    </tbody>
			</table>
		</div>

	</script>

</body>
</html>